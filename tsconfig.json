{
  "compilerOptions": {
    "target": "es2020", // Ou une version plus récente si supportée par votre version de Node.js
    "module": "commonjs",
    "lib": ["es2020"], // Assurez-vous d'inclure les librairies nécessaires
    "sourceMap": true,
    "outDir": "./lib", // Répertoire de sortie des fichiers JavaScript compilés
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true // Générer les fichiers de déclaration .d.ts (recommandé)
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
